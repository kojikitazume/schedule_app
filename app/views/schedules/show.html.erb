<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
    <h3>予定詳細</h3>

    <p>
      <strong>タイトル:</strong>
      <%= @schedule.title %>
    </p>

    <p>
      <strong>開始日:</strong>
      <%= @schedule.start_date.strftime('%Y/%m/%d') %>
    </p>

    <p>
      <strong>終了日:</strong>
      <%= @schedule.end_date.strftime('%Y/%m/%d') %>
    </p>

    <p>
      <strong>終日:</strong>
      <%= @schedule.all_day ? '○' : '' %>
    </p>

    <p>
      <strong>スケジュールメモ:</strong>
      <%= @schedule.memo %>
    </p>

    <%= link_to '編集', edit_schedule_path(@schedule), class: "btn btn-primary"%>

    <%= link_to '一覧に戻る', root_path, class: "btn btn-primary" %>
  </div>

