<div class="page-header">  
    <h3>予定一覧</h3>
    <% if flash[:notice] %>
    <% end %>
    <%= link_to new_schedule_path, class: "btn btn-primary" do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill Button__icon" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"></path>
  </svg>
  新規追加
<% end %>

</div>

<table class="table">
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_date.strftime('%Y/%m/%d') %></td>
        <td><%= schedule.end_date.strftime('%Y/%m/%d') %></td>
        <td><%= schedule.all_day ? '○' : '' %></td>
        <td><%= schedule.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td>
          <%= link_to '詳細', schedule %>
          <%= link_to '編集', edit_schedule_path(schedule) %>
          <%= link_to '削除', schedule, method: :delete, data: { confirm: '本当に予定を削除しますか?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="info-container">
  <div class="info-item">
    <p>予定合計: <%= @schedules.count %></p>
  </div>
  <div class="info-item">
    <p>本日の日付: <%= @today.strftime('%Y/%m/%d') %></p>
  </div>
</div>
